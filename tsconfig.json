{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["DOM", "ESNext"],
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
